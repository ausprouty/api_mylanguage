<div class="dbs {{ dir_language1 }}">  
    <h1 class="title">{{ title }}</h1>

    <h2>{{ look_back }}</h2>
    <ol>
        <li>{{ thankful_and_challenges_question }}</li>
        <li>{{ god_at_work_question }}</li>
        <li>{{ care_for_others_question }}</li>
        <li>{{ application_followup_question }}</li>
    </ol>

    <h2>{{ look_up }}</h2>
    <ul>
        <li>{{ read_passage_aloud_instruction }}</li>
    </ul>

    <hr/>
    <p class="bible_reference">{{ bible_reference }}</p>
    <div class="bible_text">{{ bible_block | raw }}</div>
    <p class="link">
        <a href="{{ url }}">{{ read_more }}</a>
    </p>
    {{ video_block | raw }}
    <hr/>

    <ol start="7">
        <li>{{ retell_with_help_instruction }}</li>
        <li>{{ missed_or_added_check }}</li>
        <li>{{ standout_question }}</li>
        <li>{{ insights_about_jesus_god_people_you_question }}</li>
        <li>{{ topic_sentence }}</li>
    </ol>

    <h2>{{ look_forward }}</h2>
    <ol>
        <li>{{ life_difference_question }}</li>
        <li>{{ weekly_application_question }}</li>
        <li>{{ sharing_question }}</li>
    </ol>

    <hr>
    <p class="copyright">
        ({{ language }} edition) &copy; 2023 Power To Change
    </p>
</div>
